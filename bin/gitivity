#!/usr/bin/env node
import yargs from 'yargs';

import exporter from '../src/command/export.js';
import importer from '../src/command/import.js';
import mirrorer from '../src/command/mirror.js';

yargs(process.argv.slice(2))
    .usage('gitivity <command>')
    .command(exporter)
    .command(importer)
    .command(mirrorer)
    .demandCommand()
    .wrap(100)
    .help()
    .argv;
